<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="fill_parent">
            		
	        <TextView android:id="@+id/company_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			android:textStyle="bold"
			android:textSize="18sp"
			android:textColor="@android:color/black"
			/>

        	<TextView android:id="@+id/location_city_and_country_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/company_name"
			android:textSize="12sp"
			android:textColor="@android:color/black"
			 /> 
			 
        	<TextView android:id="@+id/industry_name_en"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/location_city_and_country_name"
			android:textSize="12sp"
			android:textColor="@android:color/black"
			 />
        	
		     <TextView android:id="@+id/count_executives"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/industry_name_en"
			android:textSize="12sp"
			android:textColor="@android:color/black"
			 />
		     

</RelativeLayout>