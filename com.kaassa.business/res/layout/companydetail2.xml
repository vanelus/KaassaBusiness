<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
            <TextView android:id="@+id/company_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			android:textStyle="bold"
			android:textSize="18sp"
			android:textColor="@android:color/black"
			/>

        	<TextView android:id="@+id/location_city_and_country_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/company_name"
			android:textSize="12sp"
			android:textColor="@android:color/black"
			 /> 
			 
        	<TextView android:id="@+id/industry_name_en"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/location_city_and_country_name"
			android:textSize="12sp"
			android:textColor="@android:color/black"
			 />
        	
		     <TextView android:id="@+id/count_executives"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/industry_name_en"
			android:textSize="12sp"
			android:textColor="@android:color/black"
			 />
		     
		    <TextView android:id="@+id/contact_email"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/count_executives"
			android:textSize="12sp"
			android:textColor="@android:color/black"
			 />
		     		     
		    <TextView android:id="@+id/contact_phone"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/contact_email"
			android:textSize="12sp"
			android:textColor="@android:color/black"
			 />

		     		     
		    <TextView android:id="@+id/slogan"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/contact_phone"
			android:textSize="12sp"
			android:textColor="@android:color/black"
			 />
		     
		    <ListView
	        android:id="@+id/executives_list"
	        android:layout_width="match_parent"
	        android:layout_height="200dp"
	        android:divider="@android:color/black"
	        android:dividerHeight="1sp"
	        android:background="#FFFFFF"
	        android:layout_marginTop="5sp"
	        android:layout_below="@+id/slogan"
	         >
	 	   </ListView>
		     
		    <ListView
	        android:id="@+id/subsidiaries_list"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:divider="@android:color/black"
	        android:dividerHeight="1sp"
	        android:background="#FFFFFF"
	        android:layout_marginTop="5sp"
	        android:layout_below="@+id/executives_list"
	        
	         >
	        </ListView>
  


</RelativeLayout>
