<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" 
        android:padding="4dip"
        android:layout_width="match_parent" 
        android:layout_height="match_parent">

             <TextView android:id="@+id/company_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			android:textStyle="bold"
			android:textSize="18sp"
			android:textColor="@android:color/black"
			/>

        	<TextView android:id="@+id/location_city_and_country_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/company_name"
			android:textSize="12sp"
			android:textColor="@android:color/black"
			 /> 
			 
        	<TextView android:id="@+id/industry_name_en"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/location_city_and_country_name"
			android:textSize="12sp"
			android:textColor="@android:color/black"
			 />
        	
		     <TextView android:id="@+id/count_executives"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/industry_name_en"
			android:textSize="12sp"
			android:textColor="@android:color/black"
			 />
		     
		    <TextView android:id="@+id/contact_email"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/count_executives"
			android:textSize="12sp"
			android:textColor="@android:color/black"
			 />
		     		     
		    <TextView android:id="@+id/contact_phone"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/contact_email"
			android:textSize="12sp"
			android:textColor="@android:color/black"
			 />

		     		     
		    <TextView android:id="@+id/slogan"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/contact_phone"
			android:textSize="12sp"
			android:textColor="@android:color/black"
			 />
		    
		    <TextView android:id="@+id/parent_slug"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/slogan"
			android:paddingBottom="15sp"
			android:textSize="12sp"
			android:textColor="@android:color/black"
			android:autoLink="all"
			android:linksClickable="true"
			 />
		    
    	<com.kaassa.business.views.SlidingTabLayout
          android:id="@+id/sliding_tabs"
          android:background="#ddd"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
    
		    <android.support.v4.view.ViewPager
		            android:id="@+id/pager"
		            android:layout_width="match_parent"
		            android:layout_height="0px"
		            android:layout_weight="1"
		            
		            >
		    </android.support.v4.view.ViewPager>

</LinearLayout>